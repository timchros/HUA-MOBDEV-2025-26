<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <!--
        Add:
        style="@style/header_style"
    -->

    <TextView
        android:id="@+id/second_page_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/second_page_header"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_page_output_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="empty"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/second_page_header"
        app:layout_constraintStart_toStartOf="@+id/second_page_header"
        app:layout_constraintTop_toBottomOf="@+id/second_page_header" />

    <Button
        android:id="@+id/go_to_eclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/go_to_eclass"
        app:layout_constraintEnd_toEndOf="@+id/second_page_output_area"
        app:layout_constraintStart_toStartOf="@+id/second_page_output_area"
        app:layout_constraintTop_toBottomOf="@+id/second_page_output_area" />

    <Button
        android:id="@+id/go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/go_back"
        app:layout_constraintEnd_toEndOf="@+id/go_to_eclass"
        app:layout_constraintStart_toStartOf="@+id/go_to_eclass"
        app:layout_constraintTop_toBottomOf="@+id/go_to_eclass" />


</androidx.constraintlayout.widget.ConstraintLayout>